# LLM Benchmarking Suite Configuration
# Copy this to .env and modify as needed

# Database settings
DATABASE_URL=sqlite:///benchmark_results.db

# HuggingFace settings
HF_TOKEN=your_huggingface_token_here
HF_CACHE_DIR=~/.cache/huggingface

# Model settings
DEVICE=auto
MAX_LENGTH=512
BATCH_SIZE=1

# Benchmark settings
NUM_SAMPLES=100
TIMEOUT_SECONDS=300
MAX_RETRIES=3

# Metrics settings
ENABLE_ROUGE=true
ENABLE_BLEU=true
ENABLE_BLEURT=false
ENABLE_LATENCY=true

# Web interface settings
WEB_PORT=8501
WEB_HOST=localhost

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=logs/benchmark.log

# Output settings
RESULTS_DIR=./results
SAVE_PREDICTIONS=true
